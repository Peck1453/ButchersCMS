@model IEnumerable<Butchers.Data.BEANS.MessageBEAN>
@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-md-12">
            @foreach (var item in Model)
                {
                <div class="row">
                    <div class="col-md-12">
                        <p><strong>@Html.DisplayFor(modelItem => item.MessageSubject)</strong></p>
                        <p>@Html.DisplayFor(modelItem => item.MessageBody)</p>
                        <p>Posted by <em>@Html.DisplayFor(modelItem => item.MessageAuthor)</em> on <em>@Html.DisplayFor(modelItem => item.MessageDate)</em></p>
                        <hr />
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <p>There are no messages.</p>
        </div>
    </div>
}
