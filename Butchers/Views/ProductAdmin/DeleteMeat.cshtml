@model Butchers.Data.BEANS.MeatBEAN

@{
    ViewBag.Title = "Delete " + Model.Name;
}

<div class="row">
    <div class="col-md-10">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="col-md-2">
        <button class="btn btn-info btn-header" onclick="javascript:history.back()"><i class="fas fa-chevron-left"></i></button>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="card border-secondary mb-3" style="width: 100%;">
                    <div class="card-header bg-danger" style="color: white; font-weight: bold;">Are you sure you want to delete @Model.Name?</div>
                    <div class="card-body">
                        <p><strong>@Html.DisplayNameFor(model => model.Name): </strong>@Html.DisplayFor(model => model.Name)</p>
                        <div class="alert alert-danger">
                            <strong>Remember! </strong>By deleting @Model.Name, you will lose access to other products of this type.
                        </div>

                        <div class="row">
                            <div class="col-md-8">

                            </div>
                            <div class="col-md-4">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <input type="submit" value="Delete" style="width: 100%;" class="btn btn-danger" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
