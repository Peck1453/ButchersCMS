@model IEnumerable<Butchers.Data.BEANS.ProductItemBEAN>

<div class="row">

@if (Model.Count() > 0)
{
        foreach (var item in Model)
        {
            <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">
                            <img src="https://placeimg.com/640/300/animals/grayscale" style="width: 100%;">
                        </div>
                    </div>
                    <div class="row" style="text-align: center; padding-top: 10px;">
                        <div class="col-md-12">
                            <h3>@Html.DisplayFor(modelItem => item.Product)</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12" style="text-align: center;">
                            <p>£@Html.DisplayFor(modelItem => item.Cost) per @Html.DisplayFor(modelItem => item.MeasurementName)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @if (item.StockQty < 5 && item.StockQty > 0)
                            {
                                <div class="row">
                                    <div class="col-md-12" style="text-align: center;">
                                        <div class="alert alert-warning" style="width: 100%; margin-bottom: 0px;">
                                            <i class="fas fa-exclamation-circle"></i>&nbsp; Only @Html.DisplayFor(modelItem => item.StockQty) Remaining!
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <button class="btn btn-info" data-toggle="collapse" data-target="#@item.ProductItemId" style="width: 100%;"><i class="fas fa-plus"></i>&nbsp; Add Stock</button>
                                    </div>
                                </div>
                            }
                            else if (item.StockQty == 0)
                            {
                                <div class="row">
                                    <div class="col-md-12" style="text-align: center;">
                                        <div class="alert alert-danger" style="width: 100%; margin-bottom: 0px;">
                                            <i class="fas fa-times-circle"></i>&nbsp; Out of Stock
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <button class="btn btn-info" data-toggle="collapse" data-target="#@item.ProductItemId" style="width: 100%;"><i class="fas fa-plus"></i>&nbsp; Add Stock</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                <div id="@item.ProductItemId" class="collapse">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12" style="padding: 0px;">
                                <div class="card text-white mb-3" style="width: 100%;">
                                    <div class="card-body">
                                        @using (Html.BeginForm("UpdateStock", "ProductAdmin", FormMethod.Get))
                                        {
                                            <div class="container">
                                                <div class="row">
                                                    <div class="col-md-9" style="padding: 0px;">
                                                        @Html.DropDownList("quantity", new SelectList(Enumerable.Range(0, 11)), new { @class = "form-control" })
                                                    </div>

                                                    <div class="col-md-3" style="padding: 0px;">
                                                        <button type="submit" class="btn btn-info" style="width: 100%;"><i class="fas fa-plus"></i></button>
                                                    </div>

                                                    <input type="hidden" name="productItemId" id="productItemId" value="@item.ProductItemId" />
                                                    <input type="hidden" name="stockQty" id="stockQty" value="@item.StockQty" />
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                </div>
    }
}
else
{
    <div class="col-md-12">
        <div class="alert alert-success">
            <strong>Phew!</strong> All of your active items are in stock!
        </div>
    </div>
}
</div>

