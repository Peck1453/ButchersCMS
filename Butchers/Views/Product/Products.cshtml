@model IEnumerable<Butchers.Data.BEANS.ProductBEAN>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "AddProduct", "ProductAdmin")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Meat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Meat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditProduct", new { id=item.ProductId, meatId=item.MeatId, Controller = "ProductAdmin" }) |
            @Html.ActionLink("Delete", "DeleteProduct", new { id=item.ProductId, Controller = "ProductAdmin" })
        </td>
    </tr>
}

</table>
