@model IEnumerable<Butchers.Data.BEANS.OrderBEAN>

@{
    ViewBag.Title = "Orders";
}

<div class="row">
    <div class="col-md-11">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="col-md-1">
        @* Nothing to go here yet but fits with consistency. *@
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="alert alert-dismissible alert-info">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <p><strong>Customer Orders</strong></p>
            <p style="padding: 0px;margin:0px;">Customer orders are collectable from the day after they placed their order for up to one week. Please contact administrators if you have any queries.</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalCostAfterDiscount)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerNo)
                    </td>
                    <td>
                        £@Html.DisplayFor(modelItem => item.TotalCostAfterDiscount)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "OrderDetails", new { Id = item.OrderNo, Controller = "Order" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
