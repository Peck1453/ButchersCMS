

@model IEnumerable<Butchers.Data.BEANS.CartItemBEAN>

@{
    ViewBag.Title = "CartItems";
}

<h2>CartItems</h2>

<p>
    @Html.ActionLink("Create New", "AddCartItem", "OrderAdmin")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductItem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateAdded)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCartItem", new { Id=item.Id ,Controller = "OrderAdmin"}) |
             @*@Html.ActionLink("Details", "Details", new { Id=item}) | *@
            @Html.ActionLink("Delete", "DeleteCartItem", new { id=item.Id, Controller = "OrderAdmin"})
        </td>
    </tr>
}

</table>
